<binding xmlns:d1="http://dataone.org/service/types/NodeList/0.5" xmlns:common="http://dataone.org/service/types/common/0.5" trim-whitespace="true">
  <namespace uri="http://dataone.org/service/types/NodeList/0.5" prefix="d1"/>
  <mapping abstract="true" type-name="d1:NodeList" class="org.dataone.service.types.NodeList">
    <collection get-method="getNodeList" set-method="setNodeList" create-type="java.util.ArrayList">
      <structure map-as="d1:Node" name="node"/>
    </collection>
  </mapping>
  <mapping class="org.dataone.service.types.NodeList" name="nodeList" ns="http://dataone.org/service/types/NodeList/0.5">
    <structure map-as="d1:NodeList"/>
  </mapping>
  <mapping abstract="true" type-name="d1:Node" class="org.dataone.service.types.Node">
    <structure map-as="common:NodeReference" get-method="getIdentifier" set-method="setIdentifier" name="identifier"/>
    <value style="element" name="name" get-method="getName" set-method="setName"/>
    <value style="element" name="description" get-method="getDescription" set-method="setDescription"/>
    <value style="element" name="baseURL" get-method="getBaseURL" set-method="setBaseURL"/>
    <structure map-as="d1:Services" get-method="getServices" set-method="setServices" usage="optional" name="services"/>
    <structure map-as="d1:Synchronization" get-method="getSynchronization" set-method="setSynchronization" usage="optional" name="synchronization"/>
    <structure map-as="d1:NodeHealth" get-method="getHealth" set-method="setHealth" usage="optional" name="health"/>
    <value style="attribute" name="replicate" get-method="isReplicate" set-method="setReplicate"/>
    <value style="attribute" name="synchronize" get-method="isSynchronize" set-method="setSynchronize"/>
    <value style="attribute" name="type" get-method="getType" set-method="setType" format="d1:NodeType"/>
    <value style="attribute" name="environment" get-method="getEnvironment" set-method="setEnvironment" usage="optional" format="d1:Environment"/>
  </mapping>
  <mapping abstract="true" type-name="d1:Services" class="org.dataone.service.types.Services">
    <collection get-method="getServices" set-method="setServices" create-type="java.util.ArrayList">
      <structure map-as="d1:Service" name="service"/>
    </collection>
  </mapping>
  <mapping abstract="true" type-name="d1:Service" class="org.dataone.service.types.Service">
    <value style="element" name="name" get-method="getName" set-method="setName"/>
    <collection get-method="getMethodList" set-method="setMethodList" create-type="java.util.ArrayList">
      <structure map-as="d1:ServiceMethod" name="method"/>
    </collection>
    <value style="attribute" name="version" get-method="getVersion" set-method="setVersion"/>
    <value style="attribute" name="available" get-method="getAvailable" set-method="setAvailable" usage="optional"/>
  </mapping>
  <mapping abstract="true" type-name="d1:ServiceMethod" class="org.dataone.service.types.ServiceMethod">
    <value style="attribute" name="name" get-method="getName" set-method="setName" usage="optional"/>
    <value style="attribute" name="rest" get-method="getRest" set-method="setRest"/>
    <value style="attribute" name="implemented" get-method="isImplemented" set-method="setImplemented"/>
  </mapping>
  <mapping abstract="true" type-name="d1:Synchronization" class="org.dataone.service.types.Synchronization">
    <structure map-as="d1:Schedule" get-method="getSchedule" set-method="setSchedule" name="schedule"/>
    <value style="element" name="lastHarvested" get-method="getLastHarvested" set-method="setLastHarvested"/>
    <value style="element" name="lastCompleteHarvest" get-method="getLastCompleteHarvest" set-method="setLastCompleteHarvest"/>
  </mapping>
  <mapping abstract="true" type-name="d1:Schedule" class="org.dataone.service.types.Schedule">
    <value style="attribute" name="hour" get-method="getHour" set-method="setHour"/>
    <value style="attribute" name="mday" get-method="getMday" set-method="setMday"/>
    <value style="attribute" name="min" get-method="getMin" set-method="setMin"/>
    <value style="attribute" name="mon" get-method="getMon" set-method="setMon"/>
    <value style="attribute" name="sec" get-method="getSec" set-method="setSec"/>
    <value style="attribute" name="wday" get-method="getWday" set-method="setWday"/>
    <value style="attribute" name="year" get-method="getYear" set-method="setYear"/>
  </mapping>
  <mapping abstract="true" type-name="d1:NodeHealth" class="org.dataone.service.types.NodeHealth">
    <structure name="ping">
      <value style="attribute" name="success" get-method="getPingSuccess" set-method="setPingSuccess" usage="optional"/>
      <value style="attribute" name="lastSuccess" get-method="getPingLastSuccess" set-method="setPingLastSuccess" usage="optional"/>
    </structure>
    <structure name="status">
      <value style="attribute" name="success" get-method="getStatusSuccess" set-method="setStatusSuccess" usage="optional"/>
      <value style="attribute" name="dateChecked" get-method="getStatusDateChecked" set-method="setStatusDateChecked"/>
    </structure>
    <value style="attribute" name="state" get-method="getState" set-method="setState" format="d1:NodeState"/>
  </mapping>
</binding>