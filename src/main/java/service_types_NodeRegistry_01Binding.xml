<binding xmlns:ns3="http://dataone.org/service/types/NodeRegistry/0.1" xmlns:common="http://dataone.org/service/types/common/0.1" trim-whitespace="true">
  <namespace uri="http://dataone.org/service/types/NodeRegistry/0.1" prefix="d1"/>
  <mapping abstract="true" type-name="ns3:Node" class="org.dataone.service.types.Node">
    <structure map-as="common:Identifier" get-method="getIdentifier" set-method="setIdentifier" name="identifier"/>
    <structure map-as="common:NodeReference" get-method="getName" set-method="setName" name="name"/>
    <value style="element" name="baseURL" get-method="getBaseURL" set-method="setBaseURL"/>
    <collection get-method="getServices" set-method="setServices" create-type="java.util.ArrayList">
      <structure map-as="ns3:Services" name="services"/>
    </collection>
    <structure map-as="ns3:Synchronization" get-method="getSynchronization" set-method="setSynchronization" name="synchronization"/>
    <value style="attribute" name="replicate" get-method="isReplicate" set-method="setReplicate"/>
    <value style="attribute" name="synchronize" get-method="isSynchronize" set-method="setSynchronize"/>
    <value style="attribute" name="type" get-method="getType" set-method="setType"/>
  </mapping>
  <mapping abstract="true" type-name="ns3:Services" class="org.dataone.service.types.Services">
    <value style="attribute" name="api" get-method="getApi" set-method="setApi"/>
    <value style="attribute" name="available" get-method="isAvailable" set-method="setAvailable"/>
    <value style="attribute" name="datechecked" get-method="getDatechecked" set-method="setDatechecked"/>
    <value style="attribute" name="method" get-method="getMethod" set-method="setMethod"/>
    <value style="attribute" name="rest" get-method="getRest" set-method="setRest"/>
  </mapping>
  <mapping abstract="true" type-name="ns3:Synchronization" class="org.dataone.service.types.Synchronization">
    <structure map-as="ns3:Schedule" get-method="getSchedule" set-method="setSchedule" name="schedule"/>
    <value style="element" name="lastHarvested" get-method="getLastHarvested" set-method="setLastHarvested"/>
    <value style="element" name="lastCompleteHarvest" get-method="getLastCompleteHarvest" set-method="setLastCompleteHarvest"/>
  </mapping>
  <mapping abstract="true" type-name="ns3:Schedule" class="org.dataone.service.types.Schedule">
    <value style="attribute" name="hour" get-method="getHour" set-method="setHour"/>
    <value style="attribute" name="mday" get-method="getMday" set-method="setMday"/>
    <value style="attribute" name="min" get-method="getMin" set-method="setMin"/>
    <value style="attribute" name="mon" get-method="getMon" set-method="setMon"/>
    <value style="attribute" name="sec" get-method="getSec" set-method="setSec"/>
    <value style="attribute" name="wday" get-method="getWday" set-method="setWday"/>
    <value style="attribute" name="year" get-method="getYear" set-method="setYear"/>
  </mapping>
  <mapping class="org.dataone.service.types.NodeRegistry" name="nodeRegistry" ns="http://dataone.org/service/types/NodeRegistry/0.1">
    <collection get-method="getNodes" set-method="setNodes" create-type="java.util.ArrayList">
      <structure map-as="ns3:Node" name="node"/>
    </collection>
  </mapping>
</binding>