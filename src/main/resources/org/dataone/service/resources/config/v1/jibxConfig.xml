<schema-set xmlns:xs="http://www.w3.org/2001/XMLSchema"
  prefer-inline="false" generate-all="true" package="org.dataone.service.types.v1"
  type-substitutions="xs:unsignedLong xs:long" enumeration-type="java5" >
    <class-decorator class="org.dataone.jibx.schema.codegen.extend.CollectionMethodsDecorator"/>
     <!-- Should add in the serializable decorator, we may want to use it at some point -->
     <class-decorator class="org.jibx.schema.codegen.extend.SerializableDecorator" serial-version="10000000"/>
     <class-decorator class="org.dataone.jibx.schema.codegen.extend.ComparableIdentifierDecorator" match-name="Identifier"/>
     <class-decorator class="org.dataone.jibx.schema.codegen.extend.ComparableIdentifierDecorator" match-name="NodeReference"/>
     <class-decorator class="org.dataone.jibx.schema.codegen.extend.ComparableIdentifierDecorator" match-name="ObjectFormatIdentifier"/>
     <class-decorator class="org.dataone.jibx.schema.codegen.extend.ComparableSubjectDecorator" match-name="Subject"/> -->

<!--      For development cycles, we will use dataoneTypes.xsd as the schema-set name, but
          For production releases we switch to an url that has v1 as the last segment of the uri path -->
<!--      <schema-set names="dataoneTypes.xsd" prefix="d1" namespaces="http://ns.dataone.org/service/types/v1"> -->
    <schema-set names="v1" prefix="d1" namespaces="http://ns.dataone.org/service/types/v1">
        <schema-type type-name="dateTime" java-class="java.util.Date"
            serializer="org.dataone.service.util.DateTimeMarshaller.serializeDateToUTC"
            deserializer="org.dataone.service.util.DateTimeMarshaller.deserializeDateToUTC"/>
        <schema-type type-name="long" java-class="java.math.BigInteger"
            serializer="org.dataone.service.util.BigIntegerMarshaller.serializeBigInteger"
            deserializer="org.dataone.service.util.BigIntegerMarshaller.deserializeBigInteger"/>
<!--      For development cycles, we will use dataoneTypes.xsd as the schema name, but
          For production releases we switch to an url that has v1 as the last segment of the uri path -->
<!--            <schema name="dataoneTypes.xsd" includes="ObjectFormatIdentifier NodeReference" > -->
            <schema name="v1" includes="ObjectFormatIdentifier NodeReference" >
                <simpleType name="ObjectFormatIdentifier">
                    <restriction value-name="value" />
                </simpleType>
                <complexType name="NodeReference">
                   <simpleContent>
                        <extension value-name="value" />
                    </simpleContent>
                </complexType>
                <complexType name="Identifier">
                    <simpleContent>
                        <extension value-name="value" />
                    </simpleContent>
                </complexType>
                <complexType name="Subject">
                    <simpleContent>
                        <extension value-name="value" />
                    </simpleContent>
                </complexType>
                <complexType name="Checksum">
                    <simpleContent>
                        <extension value-name="value" />
                    </simpleContent>
                </complexType>
            </schema>
    </schema-set>
</schema-set>