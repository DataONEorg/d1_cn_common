<project name="DataONE-ServiceAPI-Java" default="hello" basedir=".">
    <description>
        tasks needed but not supported by Maven build file
    </description>
    <!-- set global properties for this build -->

    <target name="hello"
            description="say hello" >
        <echo message="Hello World"/>
        <echo message="compile classpath: ${compile_classpath}"/>
        <echo message="runtime classpath: ${runtime_classpath}"/>

    </target>

    <target name="cleanUpTypes"
            description="generate the distribution" >

        <replaceregexp file="${basedir}/src/main/java/org/dataone/service/types/v1/Identifier.java"
                       match="(\s+)(Serializable)"
                       replace="\1 Serializable, Comparable"
                       byline="true"
        />
        <replaceregexp file="${basedir}/src/main/java/org/dataone/service/types/v1/NodeReference.java"
                       match="(\s+)(Serializable)"
                       replace="\1 Serializable, Comparable"
                       byline="true"
        />
<!--        <replaceregexp file="${basedir}/src/main/java/org/dataone/service/types/v1/Identifier.java"
                       match="(private String value\;)"
                       replace="\1${line.separator}${line.separator}    public int compareTo\(Object identifier\) throws ClassCastException \{${line.separator}        Identifier id = (Identifier)identifier\;${line.separator}        return this.value.compareTo\(id\.getValue\(\)\)\;${line.separator}    \}${line.separator}"
                       byline="true"
        /> -->
    </target>




    <!-- generate using default settings -->
    <target name="codegen">

        <echo message="Running code generation from schema"/>
